{
  "kind": "collectionType",
  "collectionName": "artworks",
  "info": {
    "singularName": "artwork",
    "pluralName": "artworks",
    "displayName": "Artwork",
    "description": "Art pieces for the VelvetGraphite gallery"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "tags": {
      "type": "json",
      "default": []
    },
    "redditUsername": {
      "type": "string"
    },
    "redditPostUrl": {
      "type": "string"
    },
    "dateDrawn": {
      "type": "date"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "views": {
      "type": "integer",
      "default": 0
    }
  }
}
